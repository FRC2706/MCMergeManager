<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ca.team2706.scouting.mcmergemanager.stronghold2016.gui.TeamStatsActivity"
    tools:showIn="@layout/stronghold2016_activity_team_stats">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/teamStatsLinearLayout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Stats Report for Team ####"
            android:id="@+id/fullStatsReportTitle"
            android:layout_gravity="center_horizontal"
            android:textSize="28sp" />

        <!-- HIGH SHOTS -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Record (W/L/T): 0/0/0"
            android:id="@+id/fullStatsReportRecordTV" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Matches Played: 0"
            android:id="@+id/numMatchesPlayedTV" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="OPR: 0.0"
            android:id="@+id/OPRtv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="DPR: 0.0"
            android:id="@+id/DPRtv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Schedule Toughness: 1.0"
            android:id="@+id/schedToughnessTV" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Auto Mode:"
            android:id="@+id/AutoTitle" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="yn"
                android:id="@+id/crossedBaseLineTV"
                android:layout_row="0"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Installed \n    Gear:"
                android:id="@+id/installedGear"
                android:layout_row="1"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/installedGearTV"
                android:layout_row="1"
                android:layout_column="1"
                android:text="yes/no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0 / 0 (0)"
                android:id="@+id/autoHighGoalsTV"
                android:layout_row="3"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0 / 0 (0)"
                android:id="@+id/autoLowGoalsTV"
                android:layout_row="4"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Missed Shots: "
                android:id="@+id/autoMissedShotsLBL"
                android:layout_row="5"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0 / 0 (0)"
                android:id="@+id/autoMissedShotsTV"
                android:layout_row="5"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Crossed \n   Base Line:"
                android:id="@+id/crossBaseLine"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Low Goals:"
                android:id="@+id/autoLowGoalsLBL"
                android:layout_row="4"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="High Goals:"
                android:id="@+id/autoHighGoalsLBL"
                android:layout_row="3"
                android:layout_column="0" />
        </GridLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Teleop Mode:"
            android:id="@+id/teleopTitleTV" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="High Goals:"
                android:id="@+id/highGoals"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0 / 0 (0)"
                android:id="@+id/teleopHighGoalsTV"
                android:layout_row="0"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="\tAvg setup time:"
                android:id="@+id/teleopHighSetupTimeLBL"
                android:layout_row="1"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="\t0.0 s"
                android:id="@+id/teleopHighSetupTimeTV"
                android:layout_row="1"
                android:layout_column="1"
                android:gravity="end|right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Low Goals:"
                android:id="@+id/lowGoals"
                android:layout_row="2"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0 / 0 (0)"
                android:id="@+id/teleopLowGoalsTV"
                android:layout_row="2"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="\tAvg setup time:"
                android:id="@+id/lowGoalSetupTime"
                android:layout_row="3"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="\t0.0 s"
                android:id="@+id/teleopLowSetupTimeTV"
                android:layout_row="3"
                android:layout_column="1"
                android:gravity="end|right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Missed Shots: "
                android:id="@+id/missedShots"
                android:layout_row="5"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0 / 0 (0)"
                android:id="@+id/teleopMissedShotsTV"
                android:layout_row="5"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ground Pickups: "
                android:id="@+id/groundPickups"
                android:layout_row="7"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0 / 0 (0)"
                android:id="@+id/teleopGroundPickupsTV"
                android:layout_row="7"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Chute Pickups: "
                android:id="@+id/chutePickups"
                android:layout_row="8"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0 / 0 (0)"
                android:id="@+id/chutePickupsTV"
                android:layout_row="8"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Hopper Pickups: "
                android:id="@+id/hopperPickups"
                android:layout_row="9"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0 / 0 (0)"
                android:id="@+id/hopperPickupsTV"
                android:layout_row="9"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Failed Pickups: "
                android:id="@+id/failedPickups"
                android:layout_row="10"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0 / 0 (0)"
                android:id="@+id/teleopFailedPickupsTV"
                android:layout_row="10"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Avg Time Playing D: "
                android:id="@+id/textView34"
                android:layout_row="11"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="\t0.0 s"
                android:id="@+id/teleopTimePlayingDTV"
                android:layout_row="11"
                android:layout_column="1"
                android:gravity="end|right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Avg Deadness:  "
                android:id="@+id/textView36"
                android:layout_row="12"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0%"
                android:id="@+id/avgDeadnessTV"
                android:layout_row="12"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="\tHighest:  "
                android:id="@+id/textView38"
                android:layout_row="13"
                android:layout_column="0" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="\t0%"
                android:id="@+id/highestDeadnessTV"
                android:layout_row="13"
                android:layout_column="1" />

            <Space
                android:layout_width="20px"
                android:layout_height="10dp"
                android:layout_row="14"
                android:layout_column="0" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Climbing:"
                android:id="@+id/canClimb"
                android:layout_row="16"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="yes/no"
                android:id="@+id/canClimbTV"
                android:layout_row="16"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="\tAvg Time: "
                android:id="@+id/climbTime"
                android:layout_row="17"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="\t0 s"
                android:id="@+id/climbTimeTV"
                android:layout_row="17"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="\t0 / 0 (0)"
                android:id="@+id/failedClimbsTV"
                android:layout_row="18"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="\tFailed: "
                android:id="@+id/failedClimbs"
                android:layout_row="18"
                android:layout_column="0" />


        </GridLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:text="High Shots in Teleop:"
            android:id="@+id/textView22" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mapHighLayout"
            android:layout_gravity="center">

            <ImageView
                android:src="@drawable/offensive_courtyard"
                android:layout_width="@dimen/offensive_courtyard_image_width"
                android:layout_height="@dimen/offensive_courtyard_image_width"
                android:id="@+id/mapHigh"
                android:layout_gravity="center"
                android:layout_centerInParent="true" />
        </RelativeLayout>


        <!-- LOW SHOTS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:text="Low Shots in Teleop:"
            android:id="@+id/textView23" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mapLowLayout"
            android:layout_gravity="center">

            <ImageView
                android:src="@drawable/offensive_courtyard"
                android:layout_width="@dimen/offensive_courtyard_image_width"
                android:layout_height="@dimen/offensive_courtyard_image_width"
                android:id="@+id/mapLow"
                android:layout_gravity="center"
                android:layout_centerInParent="true" />
        </RelativeLayout>

    </LinearLayout>


</ScrollView>
