<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/repair_collection_main_layout"
        android:orientation="vertical">

        <TextView
            android:text="Record Repair Times and Stuff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            android:textAppearance="@android:style/TextAppearance.Material.Large" />

        <Button
            android:text="Submit Data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/repairTimesSubmitButton1"
            android:onClick="onSubmitClicked" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rowContainer"></LinearLayout>

        <Button
            android:text="Submit Data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/repairTimesSubmitButton2"
            android:onClick="onSubmitClicked" />

    </LinearLayout>
</ScrollView>