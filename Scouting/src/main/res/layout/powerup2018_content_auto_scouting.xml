<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/auto_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="6dp"
        android:text="Autonomous"
        android:textSize="30sp" />

    <CheckBox
        android:id="@+id/baseline_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/auto_title"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        android:text="Cross baseline?"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/auto_pickup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/auto_title"
        android:layout_below="@+id/baseline_checkbox"
        android:layout_marginTop="11dp"
        android:text="Pickup"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/auto_pickup_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/baseline_checkbox"
        android:layout_marginTop="46dp"
        android:entries="@array/auto_pickup_spinner" />

    <Spinner
        android:id="@+id/auto_delivery_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/auto_pickup_spinner"
        android:layout_marginTop="54dp"
        android:entries="@array/auto_delivery_spinner" />

    <CheckBox
        android:id="@+id/no_auto_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/baseline_checkbox"
        android:layout_below="@+id/auto_delivery_spinner"
        android:layout_marginTop="36dp"
        android:text="No Auto"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/auto_malfunction_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/no_auto_checkbox"
        android:layout_below="@+id/no_auto_checkbox"
        android:layout_marginTop="27dp"
        android:text="Auto Malfunction"
        android:textSize="20sp" />

    <Button
        android:id="@+id/auto_goToTeleop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/auto_malfunction_checkbox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="Go to teleop"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/auto_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Comments..."
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/auto_pickup_text"
        android:layout_below="@+id/auto_pickup_spinner"
        android:layout_marginTop="20dp"
        android:text="Delivered"
        android:textSize="20sp" />


</RelativeLayout>