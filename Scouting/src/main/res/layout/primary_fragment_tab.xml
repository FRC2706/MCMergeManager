<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="371dp"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="58dp"
                    android:text="Team Schedule"
                    android:id="@+id/button5"
                    android:layout_gravity="right"
                    android:layout_weight="7.10"
                    android:onClick="onShowTeamScheduleClicked"
                    android:clickable="false" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:text="Full Schedule"
                    android:id="@+id/button4"
                    android:layout_gravity="right"
                    android:layout_weight="7.10"
                    android:onClick="onShowScheduleClicked"
                    android:clickable="false" />
            </LinearLayout>
            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0px"
                android:layout_height="0px"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/matchNoET"
                android:hint="Match #"
                android:layout_gravity="center_horizontal"
                android:textColor="?attr/colorPrimaryDark"
                android:gravity="center" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:text="Scout Match"
                android:background="?attr/colorPrimaryDark"
                android:textStyle="bold"
                android:onClick="scout"
                android:textSize="28sp"
                android:enabled="true" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="58dp">

                <Button android:id="@+id/takePictureBtn"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Take Picture"
                    android:onClick="takePicture"
                    />

                <Button
                    android:text="Sync Photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/syncButon"
                    android:onClick="syncPhotos" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_height="wrap_content"
                        android:id="@+id/syncBar"
                        android:layout_width="match_parent" />

                    <TextView
                        android:text="Start a sync here"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/syncCaption"
                        android:layout_weight="0.19" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:text="Record Repair Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button6"
                android:onClick="onRepairTimeRecordClicked" />

        </LinearLayout>


        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/fragment_container1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Sync Files" />
        </FrameLayout>
    </LinearLayout>
</ScrollView>