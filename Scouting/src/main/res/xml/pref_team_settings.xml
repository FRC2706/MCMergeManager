<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="@string/PROPERTY_teamname"
        android:title="Team Name"
        android:defaultValue="Team2706"
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:singleLine="true"
        android:maxLines="1"
        android:persistent="true" />

    <ListPreference
        android:key="@string/PROPERTY_event"
        android:title="Event Name"
        android:defaultValue="Preseason"
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:singleLine="true"
        android:maxLines="1"
        android:persistent="true" />

</PreferenceScreen>
