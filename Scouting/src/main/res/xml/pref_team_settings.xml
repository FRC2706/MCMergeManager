<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <EditTextPreference
        android:key="@string/PROPERTY_DBHostname"
        android:title="DB Hostname (Address)"
        android:defaultValue="@string/PROPERTY_DBHostname_default"
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:singleLine="true"
        android:maxLines="1"
        android:persistent="true"/>


    <EditTextPreference
        android:key="@string/PROPERTY_FTPHostname"
        android:title="FTP Hostname (Address)"
        android:defaultValue="@string/PROPERTY_FTPHostname_default"
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:singleLine="true"
        android:maxLines="1"
        android:persistent="true"/>

    <EditTextPreference
        android:key="@string/PROPERTY_FTPUsername"
        android:title="FTP Username"
        android:defaultValue="@string/PROPERTY_FTPUsername_default"
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:singleLine="true"
        android:maxLines="1"
        android:persistent="true"/>

    <EditTextPreference
        android:key="@string/PROPERTY_FTPPassword"
        android:title="FTP Password"
        android:defaultValue=""
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:singleLine="true"
        android:maxLines="1"
        android:persistent="true"/>

    <CheckBoxPreference
        android:key="@string/PROPERTY_FTPSyncOnlyWifi"
        android:defaultValue="true"
        android:title="Only sync photos over WiFi?" />

    <ListPreference
        android:key="@string/PROPERTY_event"
        android:title="Event Name"
        android:defaultValue="Test Event"
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:singleLine="true"
        android:maxLines="1"
        android:persistent="true" />


</PreferenceScreen>
